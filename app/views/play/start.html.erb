<script>
    $(function() {
        $('.square').click(function() {
            $.ajax({
                url: "choose?id="+$(this).attr('id'),
                type: "GET",
                dataType: "script"
            });
        });
    });
</script>
<style>
    .square:hover {cursor: hand; cursor: pointer;}
</style>
<div id="results" style="margin: 50px auto; width: 150px;"></div>
